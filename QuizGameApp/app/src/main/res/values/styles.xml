<resources>
    <style name="StyledIndicators" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#1A237E</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#D50000</item>

        <item name="editTextColor">#FFFFFF</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:background">#A02E61</item>
        <item name="footerColor">#FFEBEE</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#EF9A9A</item>
        <item name="selectedColor">@color/bijela</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="TabLayout"  parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">#BBDEFB</item>
    </style>

    <style name="RadioGruopDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:padding">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RingsImageDesign1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/olympicgames</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#BBDEFB</item>
    </style>

    <style name="ViewDesignHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/view_boja</item>
    </style>

    <style name="ViewDesignHorizontalThin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/view_boja</item>
    </style>

    <style name="ViewDesignVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/view_boja</item>
    </style>

    <style name="TextViewDesign">
        <item name="android:textColor">@color/roza_okvir</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionTextViewDesign">
        <item name="android:textColor">@color/roza_okvir</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NxtDesignBtn">
        <item name="android:textColor">@color/bijela</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RulesTextViewDesign">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OpeningPageGameRulesTextViewDesign">
        <item name="android:textColor">@color/view_boja</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="OpeningPageGeneralRulesTextViewDesign">
        <item name="android:textColor">@color/view_boja</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="LinearRulesContainerDesign">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ScrollViewContainerDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="LinearQuestionContainerDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/pozadina</item>
    </style>



</resources>
